<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="pet_table" resource="default" engine="innodb" comment="pet table">
        <column xsi:type="int" name="pet_id"
            padding="10"
            unsigned="true"
            nullable="false"
            comment="Entity Id"
        />
        <column xsi:type="int" name="customer_id"
            padding="10"
            unsigned="true"
            nullable="false"
            comment="Severity code"
        />
        <column xsi:type="varchar" name="pet_name"
            nullable="false"
            length="255"
            comment="pet name"
        />
        <column xsi:type="timestamp" name="created_at"
            on_update="false"
            nullable="false"
            comment="Time of create"
            default="CURRENT_TIMESTAMP"
        />
        <column xsi:type="timestamp" name="updated_at"
            on_update="true"
            nullable="true"
            comment="Time of update"
            default="CURRENT_TIMESTAMP"
        />
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="pet_id"/>
        </constraint>
        <constraint xsi:type="foreign"
            referenceId="PET_TABLE_CUSTOMER_ID_CUSTOMER_ENTITY_ENTITY_ID"
            table="pet_table"
            column="customer_id"
            referenceTable="customer_entity"
            referenceColumn="entity_id"
            onDelete="CASCADE"
        />
    </table>
</schema>
